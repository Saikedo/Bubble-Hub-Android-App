<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="5dp"/>
            <gradient
                android:startColor="#d2d2ce"
                android:endColor="#4f504e"/>
        </shape>


    </item>

    <item>
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="5dp" />
                <gradient
                    android:startColor="#ffe74a"
                    android:endColor="#ff040c"/>
            </shape>
        </clip>
    </item>

</layer-list>

